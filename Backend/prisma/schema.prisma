
generator client {
  provider = "prisma-client"
  output   = "../src/db/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
  pictureURL String
  messages Message[]
}

model Message{
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  content String?
  imageUrl String?
  sender User @relation(fields:[senderId],references: [id])
  senderId Int
  global Global @relation(fields:[globalId],references: [id])
  globalId Int
}

model Global{
id Int @id @default(autoincrement())
messages Message[]
}

